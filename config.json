{
  "name": "Rinnai2MQTT",
  "version": "2.0.7",
  "slug": "rinnai2mqtt",
  "description": "Integrates Rinnai water heaters produced in Brazil with Home Assistant via MQTT",
  "url": "https://github.com/rpr1972/rinnai2mqtt",
  "startup": "application",
  "image": "robrosa/rinnai2mqtt",
  "arch": [
    "amd64",
    "aarch64"
  ],
  "host_network": true,
  "map": [
    "config:rw"
  ],
  "options": {
    "MQTT_ADDR": "127.0.0.1",
    "MQTT_USER": "",
    "MQTT_PASS": "",
    "DEVICE_ADDR": "",
    "POLL_INTERVAL": 30,
    "DEVICE_MIN_TEMP": 35,
    "DEVICE_MAX_TEMP": 45,
    "LOCK_DEVICE_IN_USE": true
  },
  "schema": {
    "MQTT_ADDR": "str",
    "MQTT_USER": "str?",
    "MQTT_PASS": "str?",
    "DEVICE_ADDR": "str",
    "POLL_INTERVAL": "int",
    "DEVICE_MIN_TEMP": "int",
    "DEVICE_MAX_TEMP": "int",
    "LOCK_DEVICE_IN_USE": "bool"
  },
  "environment": {
    "IS_ADDON": "true"
  }
}
